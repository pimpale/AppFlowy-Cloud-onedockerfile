[service]
type = process
# Note: The command uses a hardcoded password 'password'. Consider managing secrets securely.
command=x11vnc -forever -shared
logfile = /var/log/dinit/x11vnc.log
start-on-boot = true
smooth-recovery = true
restart = true
# Requires X server
waits-for = xvfb
depends-on = xvfb
# This service likely needs the DISPLAY environment variable set.
# Consider setting it via 'env = DISPLAY=:0' or an environment-file. 