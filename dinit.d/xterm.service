[service]
type = process
command = xterm
logfile = /var/log/dinit/xterm.log
start-on-boot = true
smooth-recovery = true
restart = true
# Requires X server
waits-for = xvfb
depends-on = xvfb
# This service likely needs the DISPLAY environment variable set.
# Consider setting it via 'env = DISPLAY=:0' or an environment-file. 